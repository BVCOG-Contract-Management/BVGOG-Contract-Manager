<p style="color: green"><%= notice %></p>

<% content_for :title do %>
  View Contracts
<% end %>


<div id="contracts">
  <% if @contracts.empty? %>
  <%# TODO: replace with a reusable placeholder for empty sets %>
    <p>
      No contracts found.
    </p>
  <% else %>
  <div class="card">
    <header class="card-header">
      <div class="columns is-justify-content-space-between">
        <div class="column is-7">
          <p class="card-header-title">
            <span class="icon">
              <i class="fa-solid fa-file-contract"></i>
            </span>
            Contracts
          </p>
        </div>
        <div id="contracts-table-header-inputs" class="column is-5">
          <div>
            <input class="input" type="text" placeholder="Search by title or point of contact">
            <%= link_to "New contract", new_contract_path, class: "button is-primary" %>
          </div>
        </div>
      </div>
      
    </header>
    <div class="card-content is-paddingless">
      <table class="table table is-striped is-hoverable is-fullwidth">
        <thead>
          <tr>
            <th>
              <%= link_to "Title", :sort => "title" %>
            </th>
            <th>
              <%= link_to "Number", :sort => "number" %>
            </th>
            <th>
              <%= link_to "Point of Contact", :sort => "point_of_contact" %>
            </th>
            <th>
              <%= link_to "Vendor", :sort => "vendor" %>
            </th>
            <th>
              <%= link_to "Start Date", :sort => "starts_at" %>
            </th>
            <th>
              <%= link_to "End Date", :sort => "ends_at" %>
            </th>
            <th>
              <%= link_to "Amount", :sort => "amount_dollar" %>
            </th>
            <th>
              <%= link_to "Status", :sort => "contract_status" %>
            </th>
          </tr>
        </thead>
        <tbody>
          <% @contracts.each do |contract| %>
            <tr>
              <td>
                <%= link_to contract.title, contract %>
              </td>
              <td><%= contract.number %></td>
              <td><%= contract.point_of_contact.first_name %> <%= contract.point_of_contact.last_name %></td>
              <td><%= contract.vendor.name %></td>
              <td><%= contract.starts_at.strftime('%B %d, %Y') %></td>
              <td><%= contract.ends_at.strftime('%B %d, %Y') %></td>
              <td><%= number_to_currency(contract.amount_dollar) %> per <%= contract.amount_duration %></td>
              <td><%= contract_status_icon(contract) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <footer class="card-footer">
      <%= paginate @contracts %>
    </footer>
</div>
<% end %>
</div>
