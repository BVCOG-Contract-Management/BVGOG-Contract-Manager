<%= form_for(resource, as: resource_name, url: session_path(resource_name), validate:true) do |f| %>

    <% if flash[:success] %>
    <div class="alert alert-success", style="color: green">
      <%= flash[:success] %>
    </div>
  <% elsif flash[:error] %>
    <div class="alert alert-danger", style="color: red">
      <%= flash[:error] %>
    </div>
  <% elsif flash[:alert] %>
    <div style="color: red">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% flash.each do |type, msg| %>
    <div class="flash-notice slid-out notification <%= flash_type_to_bulma_class(type) %>">
      <%= msg %>
      <span class="icon">
        <i class="fas fa-times"></i>
      </span>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :email, style: "display: block" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="field">
    <%= f.label :password, style: "display: block" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input"  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "button is-success"%>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
