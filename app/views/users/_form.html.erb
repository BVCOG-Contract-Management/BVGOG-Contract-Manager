  </div>

  <div>
    <%= form.label :email, style: "display: block" %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :program_id, style: "display: block" %>
    <%= form.number_field :program_id %>
  </div>

  <div>
    <%= form.label :program_manager, style: "display: block" %>
    <%= form.check_box :program_manager %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
